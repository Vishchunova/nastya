using System;

namespace ConsoleApp3
{
class Program
{
static void Main(string[] args)
{
Console.Write("Введите число");
double n;
n = Convert.ToInt32(Console.ReadLine());

var sum = 0;
for (int i = 1; i <= n; i++)
{
sum += i;
}
Console.WriteLine("Сумма первых {0} членов арифметической прогрессии равна {1}", n, sum);
Console.ReadLine();
}
}
}
